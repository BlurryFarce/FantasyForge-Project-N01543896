@model FantasyForge_N01543896.Models.MediaItemDto

@{
    ViewBag.Title = "Edit Media Item";
}

<h2>Update Media Item</h2>

<form action="/MediaItem/Update/@Model.MediaItemID" method="POST">
    <div style="display:none;">
        @* Pass through the User ID *@
        <input type="text" name="MediaItemID" value="@Model.MediaItemID" />
    </div>
    <div>
        <label>Title:</label>
        <input type="text" name="Title" value="@Model.Title" />
    </div>
    <div>
        <label>Type:</label>
        <input type="text" name="Type" value="@Model.Type" />
    </div>
    <div>
        <label>Description:</label>
        <textarea  name="Description" value="@Model.Description" rows="4" cols="40"> </textarea> 
    </div>
    <div>
        <label>Genre:</label>
        <input type="text" name="Genre" value="@Model.Genre" />
    </div>
    <div style="display:none;">
        @* Pass through the Release Date *@
        <input type="datetime" name="ReleaseDate" value="@Model.ReleaseDate" />
    </div>
    <div>
        <input type="submit" value="Update Media Item" />
    </div>
</form>

<div>
    <a href="/MediaItem/List">Back to list</a>
</div>